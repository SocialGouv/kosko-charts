{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "paths": { "@socialgouv/kosko-charts/*": ["./src/*"] },
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2019",
    "types": ["dotenv", "jest", "node"]
  },
  "exclude": ["components", "coverage", "environments", "types", "utils"],
  "typedocOptions": {
    "entryPoints": ["src/utils/index.ts", "node_modules/kubernetes-models"],
    "exclude": ["src/utils/@kosko", "**/*.test.ts"],
    "out": "docs",
    "theme": "default"
  }
}
