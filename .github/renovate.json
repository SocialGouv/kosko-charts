{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>SocialGouv/renovate-config", ":automergeAll"],
  "packageRules": [
    {
      "datasources": ["docker"],
      "registryUrls": ["https://index.docker.io", "https://registry.gitlab.factory.social.gouv.fr"]
    },
    {
      "paths": ["templates"],
      "ignoreDeps": ["@socialgouv/kosko-charts"]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [".ts$"],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sconst .*?_VERSION = \"(?<currentValue>.*)\";\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}
